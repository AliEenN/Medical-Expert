@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<h1 class="Lemonada mt-4 mb-4 text-primary text-right">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h5 class="text-right" style="font-family: 'Baloo Bhaijaan';">تسجيل الدخول باستخدام حساب محلي.</h5>
                <hr />
                <div class="form-group text-right">
                    <label asp-for="Input.Email" class="Lemonada"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger text-right"></span>
                </div>
                <div class="form-group text-right">
                    <label asp-for="Input.Password" class="Lemonada"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger text-right"></span>
                </div>
                <div class="form-group text-right">
                    <div class="checkbox">
                        <label class="text-right" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary Lemonada">تسجيل الدخول</button>
                </div>
                <div class="form-group">
                    <p class="text-right">
                        <a id="forgot-password" asp-page="./ForgotPassword" style="font-family: 'Baloo Bhaijaan';">هل نسيت كلمة السر؟</a>
                    </p>
                    <p class="text-right">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="font-family: 'Baloo Bhaijaan';">تسجيل حساب جديد</a>
                    </p>
                    @*<p class="text-right">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
